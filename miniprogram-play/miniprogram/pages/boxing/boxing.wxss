.background {
  position: fixed;
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  /*垂直居中*/
  justify-content: center;
  /*水平居中*/
}

.background-image {
  position: fixed;
  width: 100%;
  height: 100%;
}

.panel {
  background: rgba(0, 0, 0, 0.8);
  backdrop-filter: saturate(80%) blur(2px) grayscale(10%);
  height: 100%;
  width: 100%;
  padding: 30px;
  box-sizing: border-box;
}

.row-top {
  justify-content: space-between;
}

.download {
  width: 50px;
  height: 50px;
  background: url(data:image/gif;base64,) no-repeat center center;
}

.button {
  border-radius: 10px;
  background: rgba(255, 255, 255, 0.3);
}

.close {
  width: 40px;
  height: 40px;
  scale: 0.6;
  background: url(data:image/gif;base64,) no-repeat center center;
}

.title {
  margin: 20px 0;
  box-sizing: border-box;
  color: white;
  line-height: 90rpx;
  text-transform: uppercase;
  font-size: 11vw;
  font-weight: 800;
}

.userinfo-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  margin-left: 40rpx;
  font-size: x-large;
  color: white;
}

.btn-group {
  display: flex;
  flex-direction: row;
  margin: 15px 0;
}

.btn {
  font-size: 12px;
  width: fit-content !important;
  border-radius: 10px;
  background: rgba(255, 255, 255, 0.3);
  color: white;
}

.info-box {
  color: white;
}

.info-box image {
  width: 32rpx;
  height: 32rpx;
  margin: 20rpx 20rpx;
}

.switch {
  border-top: 1rpx solid rgba(255, 255, 255, 0.3);
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.3);
  color: white;
  display: flex;
  flex-direction: row;
  justify-content: space-evenly;
  align-items: center;
  margin-top: 40rpx;
}

.switch .left {
  border-right: 1rpx solid rgba(255, 255, 255, 0.3);
  padding: 20rpx;
  box-sizing: border-box;
}

.switch .small{
  font-size: 12px;
  margin-top: 10rpx;
  color:rgba(255, 255, 255, 0.5) ;
}

.switch .right {
  padding: 20rpx;
  box-sizing: border-box;
}

.switch image {
  width: 85rpx;
  height: 80rpx;
  margin-right: 30rpx;
}

.startBtn{
  margin-top: 60rpx;
  border-radius: 10px;
}