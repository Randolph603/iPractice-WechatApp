.header {
  width: 750rpx;
  height: 90rpx;
  overflow: hidden;
}

.hdCon {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100%;
}

.hdCon .logo,
.hdCon .kefu {
  height: 50rpx;
}

.hdCon .hdPic {
  height: 100%;
}

.kefu {
  position: relative;
  animation: dh linear 1s infinite alternate !important;
}

.kefu .btn {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  opacity: 0;
}

.banner {
  width: 100%;
  height: 295rpx;  
}

.banner swiper {
  height: 100%;
  width: 100%;
}

.banner image {
  height: 295rpx;
  width: 100%;
}